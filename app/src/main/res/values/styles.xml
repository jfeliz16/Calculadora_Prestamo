<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="editTextPrestamo">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="labelConsultaPrestamo">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">120sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="labelConsultaPrestamoSm">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">130sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="labelConsultaPrestamoValor">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="labelConsultaPrestamoValorSm">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="buttonApp">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="colEncabezadoTablaAmort">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="colDetalleTablaAmort">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">10sp</item>

    </style>

</resources>
